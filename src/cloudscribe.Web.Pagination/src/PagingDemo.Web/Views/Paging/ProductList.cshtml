@using cloudscribe.Web.Pagination
@using PagingDemo.Web.ViewModels
@using PagingDemo.Web.Models

@model ProductListViewModel
@{
    ViewBag.Title = "Browse all products with ViewModel";
}
<h2>@ViewBag.Title</h2>
<p>You can manipulate the pageSize param in the url</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product name</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
            </tr>}
    </tbody>
</table>
<div>
    <cs-pager cs-paging-info="@Model.Paging" 
              cs-pagenumber-param="pageNumber"
              asp-controller="Paging"
              asp-action="ProductList" 
              asp-route-pagesize="@Model.Paging.ItemsPerPage"></cs-pager>
</div>
